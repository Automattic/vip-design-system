{
	"name": "@automattic/vip-design-system",
	"version": "0.10.1",
	"main": "build/system/index.js",
	"scripts": {
		"build-storybook": "build-storybook",
		"build": "cross-env NODE_ENV=production babel src --out-dir build",
		"format": "eslint . --fix",
		"jest": "NODE_ENV=test jest --detectOpenHandles",
		"jest:coverage": "npm run jest && open-cli ./coverage/index.html",
		"jest:watch": "npm run jest --watch",
		"lint": "eslint . -f json | eslines --quiet",
		"storybook": "start-storybook -p 6006",
		"test": "npm run lint && npm run jest",
		"watch": "npm run build -- --watch"
	},
	"dependencies": {
		"@radix-ui/react-checkbox": "^0.1.0",
		"@radix-ui/react-radio-group": "^0.1.0",
		"@radix-ui/react-tooltip": "^0.1.0",
		"babel-loader": "^8.2.2",
		"classnames": "^2.3.1",
		"framer-motion": "^3.9.1",
		"react-icons": "^4.2.0",
		"react-select": "^4.3.1",
		"react-select-async-paginate": "^0.6.1"
	},
	"peerDependencies": {
		"react": "*",
		"react-dom": "*",
		"theme-ui": "0.10.0"
	},
	"resolutions": {
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"**/react": "17.0.1",
		"**/react-dom": "17.0.1"
	},
	"jest": {
		"collectCoverage": true,
		"coverageReporters": [
			"json",
			"html"
		],
		"testURL": "http://localhost",
		"roots": [
			"<rootDir>/src",
			"<rootDir>/test"
		],
		"setupFiles": [
			"<rootDir>/test/setupTests.js"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/test/setupAfterEnv.js"
		],
		"transformIgnorePatterns": [
			".*.stories.js$"
		],
		"transform": {
			"\\.[jt]sx?$": "babel-jest"
		}
	},
	"devDependencies": {
		"@axe-core/react": "4.3.2",
		"@babel/cli": "^7.14.3",
		"@babel/core": "7.14.0",
		"@babel/eslint-parser": "7.15.7",
		"@babel/plugin-proposal-class-properties": "7.13.0",
		"@babel/plugin-proposal-class-static-block": "^7.14.5",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
		"@babel/plugin-syntax-class-static-block": "^7.14.5",
		"@babel/plugin-syntax-private-property-in-object": "^7.14.5",
		"@babel/plugin-transform-react-display-name": "^7.15.1",
		"@babel/preset-env": "^7.14.1",
		"@babel/preset-flow": "7.13.13",
		"@babel/preset-react": "^7.12.13",
		"@babel/runtime": "7.14.0",
		"@mdx-js/react": "^2.1.1",
		"@storybook/addon-a11y": "^6.5.8",
		"@storybook/addon-actions": "^6.5.8",
		"@storybook/addon-essentials": "^6.5.8",
		"@storybook/addon-links": "^6.5.8",
		"@storybook/react": "^6.5.8",
		"@testing-library/dom": "^8.11.1",
		"@testing-library/jest-dom": "^5.15.0",
		"@testing-library/react": "^12.1.2",
		"babel-jest": "^27.3.1",
		"cross-env": "^7.0.3",
		"eslines": "2.1.0",
		"eslint": "7.32.0",
		"eslint-config-react-app": "6.0.0",
		"eslint-config-wpvip": "automattic/eslint-config-wpvip#c6605d1c3a545d43ac2149cd464ec3c38ebc58d5",
		"eslint-plugin-jest": "24.4.2",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-no-async-foreach": "0.1.1",
		"eslint-plugin-react": "7.25.3",
		"eslint-plugin-wpcalypso": "4.1.0",
		"immer": ">=9.0.6",
		"jest-axe": "5.0.1",
		"open-cli": "^7.0.1",
		"optimize-css-assets-webpack-plugin": "^6.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-input-autosize": "^3.0.0",
		"react-refresh": "^0.9.0",
		"react-scripts": "^4.0.3",
		"theme-ui": "^0.14.5"
	}
}
