{
	"name": "@automattic/vip-design-system",
	"version": "0.19.0",
	"main": "build/system/index.js",
	"scripts": {
		"build-storybook": "build-storybook",
		"build": "npm run theme-update && cross-env NODE_ENV=production babel src --out-dir build && npm run theme-builder-copy",
		"format": "prettier --write \"src/**/*.{js,ts,tsx,md,mdx,json}\"",
		"format:check": "prettier --list-different -- \"src/system/**/*.{js,ts,tsx,md,mdx,json}\"",
		"jest": "NODE_ENV=test jest --detectOpenHandles --env=jsdom",
		"jest:coverage": "npm run jest && open-cli ./coverage/index.html",
		"jest:watch": "npm run jest --watch",
		"theme-builder-copy": "mkdir -p build/system/theme/generated/ && cp src/system/theme/generated/valet-theme.json build/system/theme/generated/valet-theme.json",
		"theme-update": "token-transformer tokens/valet-core.json src/system/theme/generated/valet-theme.json valet-core,productive-color-wpvip",
		"lint": "eslint . --fix --max-warnings 0",
		"storybook": "start-storybook -p 6006",
		"dev": "npm run storybook",
		"test": "npm run lint && npm run jest",
		"watch": "npm run build -- --watch"
	},
	"dependencies": {
		"@radix-ui/react-checkbox": "^1.0.0",
		"@radix-ui/react-dialog": "^1.0.0",
		"@radix-ui/react-dropdown-menu": "^1.0.0",
		"@radix-ui/react-radio-group": "^1.0.0",
		"@radix-ui/react-switch": "^1.0.0",
		"@radix-ui/react-tooltip": "^1.0.0",
		"@radix-ui/react-visually-hidden": "^1.0.0",
		"@storybook/addon-storysource": "^6.5.10",
		"babel-loader": "^8.2.2",
		"classnames": "^2.3.1",
		"framer-motion": "^3.9.1",
		"react-icons": "^4.2.0",
		"react-select": "^4.3.1",
		"react-select-async-paginate": "^0.6.1"
	},
	"peerDependencies": {
		"react": "*",
		"react-dom": "*",
		"theme-ui": "0.10.0"
	},
	"resolutions": {
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"**/react": "17.0.1",
		"**/react-dom": "17.0.1"
	},
	"jest": {
		"collectCoverage": true,
		"coverageReporters": [
			"json",
			"html"
		],
		"testEnvironmentOptions": {
			"url": "http://localhost"
		},
		"roots": [
			"<rootDir>/src",
			"<rootDir>/test"
		],
		"setupFiles": [
			"<rootDir>/test/setupTests.js"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/test/setupAfterEnv.js"
		],
		"transformIgnorePatterns": [
			"\\.stories.jsx$"
		],
		"transform": {
			"\\.[jt]sx?$": "babel-jest"
		}
	},
	"devDependencies": {
		"@axe-core/react": "4.4.3",
		"@babel/cli": "^7.14.3",
		"@babel/core": "7.14.0",
		"@babel/eslint-parser": "7.15.7",
		"@babel/plugin-proposal-class-properties": "7.13.0",
		"@babel/plugin-proposal-class-static-block": "^7.14.5",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
		"@babel/plugin-syntax-class-static-block": "^7.14.5",
		"@babel/plugin-syntax-private-property-in-object": "^7.14.5",
		"@babel/plugin-transform-react-display-name": "^7.15.1",
		"@babel/plugin-transform-runtime": "^7.18.5",
		"@babel/preset-env": "^7.14.1",
		"@babel/preset-flow": "7.13.13",
		"@babel/preset-react": "^7.12.13",
		"@babel/runtime": "7.14.0",
		"@mdx-js/react": "^2.1.1",
		"@radix-ui/react-icons": "^1.1.1",
		"@storybook/addon-a11y": "^6.5.9",
		"@storybook/addon-actions": "^6.5.9",
		"@storybook/addon-controls": "^6.5.9",
		"@storybook/addon-essentials": "^6.5.9",
		"@storybook/addon-links": "^6.5.9",
		"@storybook/react": "^6.5.9",
		"@testing-library/dom": "^8.11.1",
		"@testing-library/jest-dom": "^5.15.0",
		"@testing-library/react": "^12.1.2",
		"babel-jest": "^27.3.1",
		"cross-env": "^7.0.3",
		"eslines": "2.1.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-react-app": "6.0.0",
		"eslint-config-wpvip": "github:automattic/eslint-config-wpvip#b73cd84",
		"eslint-plugin-jest": "24.4.2",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-no-async-foreach": "0.1.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "7.25.3",
		"eslint-plugin-storybook": "^0.5.12",
		"eslint-plugin-wpcalypso": "4.1.0",
		"immer": ">=9.0.6",
		"jest": "^28.1.1",
		"jest-axe": "6.0.0",
		"jest-environment-jsdom": "^28.1.1",
		"jsdom": "19.0.0",
		"jsdom-global": "3.0.2",
		"open-cli": "^7.0.1",
		"optimize-css-assets-webpack-plugin": "^6.0.1",
		"prettier": "npm:wp-prettier@^2.6.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-input-autosize": "^3.0.0",
		"react-refresh": "^0.9.0",
		"theme-ui": "0.10.0",
		"token-transformer": "^0.0.24"
	}
}
